@model H5Forms.Dtos.Form.Controls.OptionList
@{
    Layout = null;
}
<div>
    @Html.Label(Model.ColumnName, Model.Label)
    <div>
        <ul>
            @foreach (var option in Model.Options)
            {
                <li>
                    @Html.RadioButton(Model.ColumnName, option.Id, string.Equals(option.Id.ToString(), Model.Value))
                    @option.Value
                </li>
                if (Model.AllowOther)
                {
                    <li>
                        @Html.RadioButton(Model.ColumnName, Model.OtherOption.Id, string.Equals(Model.OtherOption.Id.ToString(), Model.Value))
                        @Model.OtherOption.Value
                    </li>
                }
            }
        </ul>
        @Html.TextBox(Model.ColumnName, Model.OtherValue )
    </div>
</div> 