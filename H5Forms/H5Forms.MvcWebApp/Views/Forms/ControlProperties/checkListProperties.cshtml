@{
    Layout = null;
}
<div>
    <label>Options</label>

    <ul class="control-options">      
        <li ng-repeat="option in currentControl.options">
            <div class="input-group">
                <span class="input-group-addon">
                    <input type="checkbox" value="option.id" name="chkValue" ng-model="currentControl.selectedValues[option.id]" />
                </span>
                <input type="text" ng-model="option.value" class="form-control" />
                <span class="input-group-addon">
                    <img alt="Add" title="Add" src="@Url.Content("~/Content/images/add.png")" ng-click="addOption($index + 1)" />
                    <img alt="Remove" title="Remove" src="@Url.Content("~/Content/images/remove.png")" ng-click="deleteOption(option)" />
                </span>
            </div>                                       
        </li>
    </ul>
</div>
<div>
    <label>Layout</label>
    <select ng-model="currentControl.layoutType" ng-options="layout for layout in layoutTypes" class="form-control"></select>
</div>